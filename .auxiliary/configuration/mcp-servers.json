{
  "mcpServers": {
    "librovore": {
      "command": "reloaderoo",
      "args": [
        "--",
        "hatch",
        "run",
        "librovore",
        "--inscription.target-file",
        ".auxiliary/inscriptions/server.txt",
        "--inscription.level",
        "debug",
        "serve"
      ]
    },
    "pyright": {
      "command": "mcp-language-server",
      "args": [
        "--lsp",
        "pyright-langserver",
        "--workspace",
        ".",
        "--",
        "--stdio"
      ]
    }
  }
}
