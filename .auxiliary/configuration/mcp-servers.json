{
  "mcpServers": {
    "pyright": {
      "command": "mcp-language-server",
      "args": [
        "--lsp", "pyright-langserver", "--workspace", ".",
        "--", "--stdio"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [ "-y", "@upstash/context7-mcp" ]
    },
    "librovore": {
      "command": "reloaderoo",
      "args": [
        "--",
        "hatch",
        "run",
        "librovore",
        "--inscription.target-file",
        ".auxiliary/inscriptions/server.txt",
        "--inscription.level",
        "debug",
        "serve"
      ]
    }
  }
}
